<div class="container">
    <br>
    <div class="jumbotron bg-primary">
        <h1 class="text-white">News Scraper</h1>
        <p class="text-white">All the news fit to scrape!</p>
        <button class="btn bg-white font-weight-bold float-right updateBtn">Click to Update</button>
    </div>
    <div class="card p-3">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col" class="text-center" style="width:25%;">Title</th>
                    <th scope="col" class="text-center" style="width:50%;">Summary</th>
                    <th scope="col" class="text-center" style="width:25%;">Article & Comments</th>
                </tr>
            </thead>
            <tbody>
                {{#each articles}}
                <tr>
                    <th>{{title}}</th>
                    <td>{{summary}}</td>
                    <td class="text-center">
                        <a class="btn btn-primary text-white btn-sm m-1" href="{{articleURL}}" target="_blank">Click to Read!</a>
                        <a class="btn btn-primary text-white btn-sm m-1 articleComments" data-id="{{_id}}">Click to Comment!</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    <br>
</div>
<div class="modal fade" id="commentModal" tabindex="-1" role="dialog" aria-labelledby="commentModal" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header" style="border-bottom: none;">
                <h3 id="commentHeader"></h3>
            </div>
            <div class="modal-body">
                <table class="table w-100">
                    <thead>
                        <th scope="col" class="text-center" style="width:15%">Name</th>
                        <th scope="col" class="text-center" style="width:70%">Comment</th>
                        <th scope="col" class="text-center" style="width:15%">Delete?</th>
                    </thead>
                    <tbody id="commentsModalBody">
                    </tbody>
                </table>
                <hr>
                <form>
                    <div class="form-group">
                        <label for="commentName">Name:</label>
                        <input type="text" class="form-control" id="nameField" aria-describedby="commentName" placeholder="Anonymous">
                    </div>
                    <div class="form-group">
                        <label for="commentBody">Comment:</label>
                        <input type="text" class="form-control" id="bodyField" aria-describedby="commentBody" placeholder="Enter your comment here!">
                    </div>
                    <button type="submit" class="btn btn-primary float-right commentSubmit">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>